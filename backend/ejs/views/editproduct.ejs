<html>
    <head><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
    <body>
         <nav class="navbar navbar-dark  mb-5" style="background-color: #cbcbcb;font-size:30px;">
        <div class="container-fluid" >
            <a class="navbar-brand" href="/" style="color: #ffb607;font-size:30px;">BUILD</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#" style="float: right;color: #ffb607;font-size:30px;">Admin Panel</a>
                </li>
            </ul>
        </div>
    </nav>
        <div style="width: 1000px; text-align: center;">
            
            <h3 style="font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">Edit Product</h3>
        
            <form action="/editproduct_submit" method="post" enctype="multipart/form-data">

                <table align="center" border="1" cellspacing="5">
                    <tr>
                        <td>Product ID</td>
                        <td> <input type="number" name="productID" value="<%= product.productID %>" readonly></td>
                    </tr>
                    <tr>
                        <td>Product Name</td>
                        <td> <input type="text" name="productName" value="<%= product.productName %>"></td>
                    </tr>
                    <tr>
                        <td>Brand</td>
                        <td> <input type="text" name="productBrand" value="<%= product.productBrand %>"></td>
                    </tr>
                    <tr>
                        <td>Product Description</td>
                        <td> <input type="text" name="productDetails" value="<%= product.productDetails %>"></td>
                    </tr>
                    <tr>
                        <td>Product MRP</td>
                        <td> <input type="number" name="productMRP" value="<%= product.productMRP %>"></td>
                    </tr>
                    <tr>
                        <td>Product Price</td>
                        <td> <input type="number" name="productPrice" value="<%= product.productPrice %>"></td>
                    </tr>
                    <tr>
                        <td>Category</td>
                        <td>
                            <select name="productCatogory" value="<%= product.productCatogory %>">
                                <option value="Bed" <% if (product.productCatogory === 'Bed') { %> selected <% } %>>Bed</option>
        <option value="Sofa" <% if (product.productCatogory === 'Sofa') { %> selected <% } %>>Sofa</option>
        <option value="Decor" <% if (product.productCatogory === 'Decor') { %> selected <% } %>>Decor</option>
        <option value="Others" <% if (product.productCatogory === 'Others') { %> selected <% } %>>Others</option>
    </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Product Image</td>
                        <td> <input type="file" name="productImage"value="<%= product.productImage %>"></td>
                    </tr>


                    <tr>
                        <td colspan="2" align="center">
                            <input type="submit" value="Save Changes" style="background-color: green; width: 100%;"></td>
                    </tr>
                </table>
                
            </form>
            
        </div>
    </body>
</html>

